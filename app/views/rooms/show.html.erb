<h4 class="rooms-title">気になる同士</h4>
<% @entries.each do |e| %>
  <div class="user-name">
    <% if e.user.id == current_user.id %>
      <strong><a class="rooms-user-link" href="/users/<%= e.user.id %>">
        自分：<%= e.user.name %>さん
      </strong></a>
    <% else %>
      <strong><a class="rooms-user-link" href="/users/<%= e.user.id %>">
        相手：<%= e.user.name %>さん
      </strong></a>
    <% end %>
  </div>
<% end %>
<hr>
<div class="chats">
  <% if @messages.present? %>
    <% @messages.each do |m| %>
      <% if m.user.id != current_user.id %>
        <div class="balloon">
          <div class="pa-chat">
            <div class="says">
              <p><%= m.message %></p>
            </div><br>
            <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
          </div>
        </div>
      <% else %>
        <div class="cu-chat">
          <p><%= m.message %></p><br>
          <%= m.created_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <div class="posts">
    <%= form_for @message do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 80, class:"form-text-field" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>